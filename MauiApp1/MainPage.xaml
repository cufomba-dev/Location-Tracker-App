<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MauiApp1.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:maps="clr-namespace:Microsoft.Maui.Controls.Maps;assembly=Microsoft.Maui.Controls.Maps"
    xmlns:vm="clr-namespace:MauiApp1"
    x:DataType="vm:MainViewModel"
    Title="MainView">

    <Grid RowDefinitions="Auto,*">
        <HorizontalStackLayout Padding="12" Spacing="8">
            <Button Text="Start" Command="{Binding StartCommand}" />
            <Button Text="Stop"  Command="{Binding StopCommand}" />
            <Button Text="Refresh" Command="{Binding RefreshCommand}" />
            <Button Text="Clear" Command="{Binding ClearCommand}" />
            <Label Text="{Binding Status}" VerticalOptions="Center" />
        </HorizontalStackLayout>

        <maps:Map x:Name="Map"
                  Grid.Row="1"
                  IsShowingUser="True"
                  MapType="Street" />
    </Grid>
</ContentPage>
